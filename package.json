{
	"name": "henris-website",
	"version": "1.0.0",
	"description": "Henri&#39;s, the Sass Toolbelt",
	"author": "Sil van Diepen",
	"private": true,
	"scripts": {
		"dev": "sh scripts/dev.sh",
		"devlocal": "sh scripts/devlocal.sh",
		"staging": "sh scripts/staging.sh",
		"production": "sh scripts/production.sh",
		"lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
		"lint:fix": "eslint --ext .js,.vue --ignore-path .gitignore . --fix",
		"precommit": "lint",
		"generate:develop": "cp ./config/develop.js ./config/latest.js && nuxt generate",
		"generate:staging": "cp ./config/staging.js ./config/latest.js && nuxt generate",
		"generate:production": "cp ./config/production.js ./config/latest.js && nuxt generate",
		"stylelint": "stylelint '**/*.vue' '**/*.scss'",
		"stylelint:fix": "stylelint '**/*.vue' '**/*.scss' --fix"
	},
	"dependencies": {
		"@nuxtjs/axios": "^5.5.4",
		"@nuxtjs/google-analytics": "^2.2.0",
		"@nuxtjs/pwa": "^3.0.0-beta.16",
		"@sil/markdown": "^1.0.1",
		"@sil/markdown-elements": "0.0.1",
		"guyn": "0.0.10",
		"nuxt": "^2.8.1"
	},
	"devDependencies": {
		"nuxt-rfg-icon": "^0.6.3",
		"@henris/next": "^1.0.17",
		"@henris/custom": "^0.0.2",
		"babel-eslint": "^10.0.1",
		"eslint": "^5.16.0",
		"eslint-config-prettier": "^5.0.0",
		"eslint-friendly-formatter": "^4.0.1",
		"eslint-loader": "^2.1.2",
		"eslint-plugin-vue": "^5.2.2",
		"eslint-plugin-prettier": "^3.1.0",
		"node-sass": "^4.12.0",
		"sass-loader": "^10.0.5",
		"stylelint": "^10.1.0",
		"stylelint-logical-order": "^0.0.5",
		"stylelint-order": "^3.0.0"
	},
	"browserslist": [
		"last 2 versions",
		"not dead"
	],
	"stylelint": {
		"rules": {
			"at-rule-no-unknown": [
				true,
				{
					"ignoreAtRules": [
						"if",
						"for",
						"else",
						"each",
						"mixin",
						"include",
						"content"
					]
				}
			],
			"order/order": [
				"custom-properties",
				"dollar-variables",
				"declarations",
				"rules"
			],
			"indentation": "tab"
		},
		"extends": [
			"stylelint-logical-order"
		]
	}
}
